<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="min-h-screen bg-gradient-to-br from-black via-zinc-900 to-black text-white">

    <div class="main max-w-6xl mx-auto">

        <!-- FORM SECTION -->
        <div class="form p-10">
            <form action="/create" method="post"
                class="max-w-3xl mx-auto backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-8 shadow-xl">

                <h1 class="text-2xl font-bold text-center mb-6 text-blue-400">
                    âœ¨ Create New Task
                </h1>

                <input
                    class="w-full px-5 py-3 bg-zinc-900/80 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition text-center"
                    name="title"
                    type="text"
                    placeholder="Title goes here">

                <textarea
                    class="w-full mt-4 px-5 py-3 bg-zinc-900/80 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    name="details"
                    rows="4"
                    placeholder="Write your task details..."></textarea>

                <button
                    class="w-full mt-6 bg-blue-500 hover:bg-blue-600 py-3 rounded-lg font-semibold transition transform hover:scale-[1.02] shadow-lg">
                    Create Task
                </button>
            </form>
        </div>

        <!-- TASKS SECTION -->
        <div class="tasks p-10 flex gap-6 flex-wrap justify-center">

            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>

                    <div
                        class="task w-64 bg-zinc-900/70 border border-white/10 rounded-xl p-5 shadow-md
                               hover:shadow-blue-500/30 hover:-translate-y-1 transition-all duration-300">

                        <h1 class="text-lg font-semibold truncate text-blue-300">
                            <%= val %>
                        </h1>

                        <div class="mt-4 flex justify-between items-center">
                            <a href="/files/<%= encodeURIComponent(val) %>"
                                class="text-blue-400 hover:underline text-sm">
                                Read more
                            </a>

                            
                        </div>
                    </div>

                <% }) %>
            <% } else { %>

                <h3 class="text-zinc-500 text-lg italic mt-20">
                    ğŸš€ No tasks yet. Start creating!
                </h3>

            <% } %>

        </div>
    </div>

</body>
</html>
